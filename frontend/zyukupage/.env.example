# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api
NEXT_PUBLIC_API_TIMEOUT=30000

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_SESSION_TIMEOUT=3600

# Features
NEXT_PUBLIC_ENABLE_EXCEL_IMPORT=true
NEXT_PUBLIC_ENABLE_BULK_OPERATIONS=true
NEXT_PUBLIC_ENABLE_EMAIL_REPORTS=true

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.csv,.xlsx,.xls

# Report Generation
NEXT_PUBLIC_REPORT_BASE_URL=http://localhost:8000/reports
NEXT_PUBLIC_ENABLE_PDF_GENERATION=true

# Email Configuration
NEXT_PUBLIC_EMAIL_ENABLED=true
NEXT_PUBLIC_EMAIL_FROM=noreply@autograder.com

# Navigation
NEXT_PUBLIC_CLASSROOM_URL=https://classroom.kouzyoutest.com

# Development
NEXT_PUBLIC_MOCK_API=true
NEXT_PUBLIC_DEBUG_MODE=false